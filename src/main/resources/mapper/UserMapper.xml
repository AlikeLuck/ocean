<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ocean.hcansy.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="com.ocean.hcansy.entity.User" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="phone_number" property="phoneNumber" jdbcType="VARCHAR" />
    <result column="rose" property="rose" jdbcType="INTEGER" />
  </resultMap>
  
  <!-- 登录验证查询 -->
  <select id="login" resultMap="BaseResultMap" parameterType="com.ocean.hcansy.entity.User" >
    SELECT * FROM users
    WHERE user_name = #{userName} 
    	AND password = #{password} 
    limit 1
  </select>
  
  <!-- 查询全部用户信息 -->
  <select id="findAll" resultMap="BaseResultMap">
    SELECT * FROM users
  </select>
  
  <!-- 查询单个用户信息 -->
  <select id="findOne" resultMap="BaseResultMap">
    SELECT * FROM users WHERE id=#{id,jdbcType=BIGINT}
  </select>
  
  <!-- 添加一条用户信息 -->
  <insert id="insert" parameterType="com.ocean.hcansy.entity.User" >
    INSERT INTO users (user_name, password, phone_number, rose)
    VALUES (#{userName}, #{password}, #{phoneNumber}, #{rose})
  </insert>
  
  <!-- 修改用户信息 -->
  <update id="update" parameterType="com.ocean.hcansy.entity.User">
  	UPDATE users SET user_name=#{userName},phone_number=#{phoneNumber},rose=#{rose} WHERE id=#{id,jdbcType=BIGINT}
  </update>
  
  <!-- 修改用户密码 -->
  <update id="updatePassword">
  	UPDATE users SET password=#{password} WHERE id=#{id,jdbcType=BIGINT}
  </update>
  
  <!-- 删除用户信息 -->
  <delete id="delete" parameterType="Long">
  	delete from users where id=#{id,jdbcType=BIGINT}
  </delete>
  
</mapper>